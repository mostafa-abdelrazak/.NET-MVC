@model Course
<h1 class="text">
    Course Id : @Model.ID <br />
    Course name : @Model.name <br />


</h1>
<form method="post">
    <label asp-for="name"> Course name </label>
    <input asp-for="name" placeholder="@Model.name">

    <label> Remove departments from Course </label>
    <select name="Remove" asp-items="@ViewBag.DepsIn" multiple>
    </select>

    <label>Add departments to Courses </label>
    <select name="Add" asp-items="@ViewBag.DepsNotIn" multiple>
    </select>


    <input type="submit" class="btn btn-success" />
</form>



<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Department ID</th>
            <th>Department Name</th>


        </tr>
    </thead>
    <tbody>
        @{
            foreach (Department s in Model.departments)
            {
                <tr>
                    <td>@s.ID</td>
                    <td>@s.Name</td>

                </tr>
            }
        }



    </tbody>
</table>

